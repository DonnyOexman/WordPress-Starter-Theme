{
  // Enforcing
  "bitwise": true,
  "camelcase": true,
  "curly": true,
  "eqeqeq": true,
  "forin": true,
  "immed": true,
  "indent": 4,
  "latedef": true,
  "newcap": true,
  "noarg": true,
  "noempty": true,
  "quotmark": "single",
  "undef": true,
  "unused": true,
  "strict": true,
  "trailing": true,
  "regexp": true,

  // Relaxing
  "esnext": true,
  "multistr": true,

  // Environments
  "browser": true,
  "jquery": true,
  "node": true,
  "smarttabs": true,

  // Custom globals
  "globals": {
    "jQuery": true,
    "Modernizr": true
  }
}